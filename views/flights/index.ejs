<%- include('../partials/header') %>

<div>
    <table>
      <thead>
        <tr>
          <th>
            Flight#
          </th>
          <th>
            Airline
          </th>
          <th>
            Departure Airport
          </th>
          <th>
            Date
          </th>
          <th>
            Details
          </th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach((flight) => { %>
        <tr>
            <td>
                <%= flight.flightNo %>
            </td>
            <td>
                <%= flight.airline %>
            </td>
            <td>
                <%= flight.airport %>
            </td>
            <td>
                <%= flight.departs %>
            </td>
            <td>
                <button><a href="/flights/<%= flight._id %>">Details</a></button>
            </td>
        </tr>
       <% }) %>
      </tbody>
    </table>
  </div>